{
  "version": 2,
  "builds": [{
    "src": "package.json",
    "use": "@vercel/static-build",
    "config": {
      "distDir": "dist",
      "includeFiles": [
        "public/**",
        "dist/**"
      ]
    }
  }],
  "routes": [
    {
      "src": "/assets/img/(.*)",
      "dest": "/public/assets/img/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/assets/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
}
